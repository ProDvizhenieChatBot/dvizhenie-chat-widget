{
  "name": "@dvizhenie/chat-widget",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:types && npm run build:lib && npm run build:init",
    "build:types": "tsc -p tsconfig.types.json",
    "build:lib": "vite build",
    "build:init": "cross-env BUILD_INIT=true vite build",
    "build:demo": "cross-env BUILD_DEMO=true vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint:css:fix": "stylelint \"src/**/*.css\" --fix",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "preview": "vite preview",
    "start": "npm run build && vite preview",
    "prepare": "husky",
    "commit": "cz",
    "release": "semantic-release"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/dvizhenie-chat-widget.es.js",
      "default": "./dist/dvizhenie-chat-widget.umd.js"
    }
  },
  "module": "dist/dvizhenie-chat-widget.es.js",
  "main": "dist/dvizhenie-chat-widget.umd.js",
  "unpkg": "dist/dvizhenie-chat-widget.iife.js",
  "types": "dist/index.d.ts",
  "dependencies": {
    "clsx": "2.1.1",
    "date-fns": "4.1.0",
    "lucide-react": "0.544.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.36.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.6",
    "@semantic-release/npm": "^12.0.2",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitejs/plugin-react": "^5.0.3",
    "cross-env": "10.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jsdom": "27.0.0",
    "lint-staged": "^16.2.0",
    "prettier": "^3.6.2",
    "rollup-plugin-dts": "^6.2.3",
    "semantic-release": "^24.2.9",
    "stylelint": "16.24.0",
    "stylelint-config-css-modules": "4.5.1",
    "stylelint-config-standard": "39.0.0",
    "stylelint-order": "7.0.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.7",
    "vitest": "^3.2.4"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "description": "Embeddable chat widget"
}
